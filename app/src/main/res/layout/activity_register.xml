<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/registerbackground"
        tools:context=".RegisterActivity" android:orientation="vertical">

    <ScrollView
            android:layout_width="353dp"
            android:layout_height="343dp" android:layout_marginTop="180dp" android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginTop="5dp" app:boxStrokeColor="#FFFFFF"
                    android:textColorHint="#F8F8F8" app:hintTextColor="#F8F8F8">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Id Number" android:id="@+id/idnumber" android:textColor="#F6F1F1"
                        android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginTop="5dp" app:boxStrokeColor="#FFFFFF"
                    android:textColorHint="#F8F8F8" app:hintTextColor="#F8F8F8">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First name" android:id="@+id/fname" android:textColor="#F6F1F1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginTop="5dp" app:boxStrokeColor="#FFFFFF"
                    android:textColorHint="#F8F8F8" app:hintTextColor="#F8F8F8">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Middle name" android:id="@+id/mname" android:textColor="#F6F1F1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginTop="5dp" app:boxStrokeColor="#FFFFFF"
                    android:textColorHint="#F8F8F8" app:hintTextColor="#F8F8F8">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Last name" android:id="@+id/lname" android:textColor="#F6F1F1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginTop="5dp" app:boxStrokeColor="#FFFFFF"
                    android:textColorHint="#F8F8F8" app:hintTextColor="#F8F8F8">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Address" android:id="@+id/address" android:textColor="#F6F1F1"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:layout_marginTop="5dp" app:boxStrokeColor="#FFFFFF"
                    android:textColorHint="#F8F8F8" app:hintTextColor="#F8F8F8">

                <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Phone number" android:id="@+id/pnumber" android:textColor="#F6F1F1"
                        android:inputType="number"/>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>
    </ScrollView>
    <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="70dp" android:layout_marginLeft="40dp" android:layout_marginTop="1dp"
            app:cardCornerRadius="20dp" app:cardBackgroundColor="#0BF3D8">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/registerBtn"
                    android:backgroundTint="#05DFF8" android:textColor="#EDE1E1" android:textSize="24sp"
                    android:textStyle="bold|italic"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>